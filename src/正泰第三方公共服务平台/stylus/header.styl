@import "./variable/var.styl"
.header
  .container
    height 105px
  .logo
    float left
    margin 20px 0 0 0
  .sign
    float right
    border 1px solid #e5e5e5
    height 38px
    line-height 38px
    border-radius 12px
    font-size 0
    margin-top 29px
    .icon
      float left
      margin 10px 12px 0
    .bd
      padding 0 18px
      display inline-block
      border-left 1px solid #e5e5e5
      font-size 0
    a
      color #293896
      font-size 14px
      & + a
        margin-left 17px